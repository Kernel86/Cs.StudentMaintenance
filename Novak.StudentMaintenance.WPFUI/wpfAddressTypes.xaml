        </StatusBar>
        <Button Content="Update" Height="23" HorizontalAlignment="Left" Margin="248,108,0,0" Name="btnUpdate" VerticalAlignment="Top" Width="75" Click="btnUpdate_Click" />
        <Button Content="Insert" Height="23" HorizontalAlignment="Left" Margin="248,79,0,0" Name="btnInsert" VerticalAlignment="Top" Width="75" Click="btnInsert_Click" />
        <Button Content="Delete" Height="23" HorizontalAlignment="Left" Margin="248,50,0,0" Name="btnDelete" VerticalAlignment="Top" Width="75" Click="btnDelete_Click" />
    </Grid>
</Window>
